<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.animaldispersal.AnimalDetailActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutAnimalDetailsI"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <!--Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:id="@+id/savebutton1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/-->
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:id="@+id/editbutton"
                    android:layout_alignBaseline="@+id/textView16"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible" />
                    <!--android:layout_toRightOf="@id/savebutton1"
                    android:layout_toEndOf="@id/savebutton1"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infotext"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_details_i_heading"
                    android:id="@+id/textView16"
                    android:layout_below="@id/infotext"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    style="@style/sectionHeader"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_id_mandatory"
                    android:id="@+id/animalIDLabel"
                    android:layout_alignBaseline="@+id/animal_id"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/animal_id"
                    android:layout_below="@id/textView16"
                    android:layout_toRightOf="@+id/animalTypeLabel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:enabled="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country_mandatory"
                    android:id="@+id/countryLabel"
                    android:layout_alignBaseline="@+id/country"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/country"
                    android:layout_below="@+id/animal_id"
                    android:layout_alignLeft="@+id/animal_id"
                    android:layout_alignStart="@+id/animal_id"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispersal_ic_mandatory"
                    android:id="@+id/supervisorLabel"
                    android:layout_alignBaseline="@+id/supervisor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/supervisor"
                    android:layout_below="@+id/country"
                    android:layout_alignLeft="@+id/country"
                    android:layout_alignStart="@+id/country"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_type_mandatory"
                    android:id="@+id/animalTypeLabel"
                    android:layout_alignTop="@+id/animal_type_radiogroup"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_mandatory"
                    android:id="@+id/genderLabel"
                    android:layout_alignTop="@+id/gender_radio_group"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <RadioGroup
                    android:id="@+id/animal_type_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/supervisor"
                    android:layout_alignLeft="@+id/supervisor"
                    android:layout_alignStart="@+id/supervisor"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cow"
                        android:id="@+id/cow_radio_button"
                        android:checked="false" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goat"
                        android:id="@+id/goat_radio_button"
                        android:checked="false" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pig"
                        android:id="@+id/pig_radio_button"
                        android:checked="false" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/gender_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/animal_type_radiogroup"
                    android:layout_alignLeft="@+id/animal_type_radiogroup"
                    android:layout_alignStart="@+id/animal_type_radiogroup"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:id="@+id/male_radio_button"
                        android:checked="false" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:id="@+id/female_radio_button"
                        android:checked="false" />
                </RadioGroup>
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/savebutton2"
                    android:layout_below="@+id/gender_radio_group"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutAnimalDetailsII"
                android:layout_below="@+id/relativeLayoutAnimalDetailsI"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_marginTop="@dimen/activity_vertical_margin">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:id="@+id/editbutton2"
                    android:layout_alignBaseline="@+id/textView17"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_details_ii_heading"
                    android:id="@+id/textView17"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    style="@style/sectionHeader"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:id="@+id/dateOfBirthLabel"
                    android:layout_alignBaseline="@+id/date_of_birth"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_purchased"
                    android:id="@+id/datePurchasedLabel"
                    android:layout_alignBaseline="@+id/date_purchased"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchase_price"
                    android:id="@+id/purchasePriceLabel"
                    android:layout_alignBaseline="@+id/purchase_price"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_dispersed"
                    android:id="@+id/dateDistributedLabel"
                    android:layout_alignBaseline="@+id/date_distributed"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_sold"
                    android:id="@+id/dateSoldLabel"
                    android:layout_alignBaseline="@+id/date_sold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sale_price"
                    android:id="@+id/salePriceLabel"
                    android:layout_alignBaseline="@+id/sale_price"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_of_birth"
                    android:inputType="date"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:layout_below="@id/textView17"
                    android:layout_toRightOf="@+id/dateDistributedLabel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:singleLine="true"
                    android:focusable="false"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_purchased"
                    android:layout_below="@+id/date_of_birth"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/date_of_birth"
                    android:layout_alignStart="@+id/date_of_birth"
                    android:inputType="date"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:focusable="false" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/purchase_price"
                    android:layout_below="@+id/date_purchased"
                    android:layout_toRightOf="@+id/datePurchasedLabel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="numberDecimal" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/date_distributed"
                    android:layout_below="@+id/purchase_price"
                    android:layout_alignLeft="@+id/date_purchased"
                    android:layout_alignStart="@+id/date_purchased"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:focusable="false" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_sold"
                    android:layout_below="@+id/date_distributed"
                    android:layout_alignLeft="@+id/date_distributed"
                    android:layout_alignStart="@+id/date_distributed"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:inputType="date"
                    android:singleLine="true"
                    android:focusable="false" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sale_price"
                    android:layout_below="@+id/date_sold"
                    android:layout_alignLeft="@+id/date_sold"
                    android:layout_alignStart="@+id/date_sold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="numberDecimal" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/savebutton3"
                    android:layout_below="@+id/sale_price"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutCaretaker"
                android:layout_below="@+id/relativeLayoutAnimalDetailsII"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="visible">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:id="@+id/editbutton3"
                    android:layout_alignBaseline="@+id/textView18"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/caretaker_heading"
                    android:id="@+id/textView18"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    style="@style/sectionHeader"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/national_id_number"
                    android:id="@+id/caretakerIdLabel"
                    android:layout_alignBaseline="@+id/caretaker_id"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:id="@+id/caretakerNameLabel"
                    android:layout_alignBaseline="@+id/caretaker_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telephone"
                    android:id="@+id/caretakerTelephoneLabel"
                    android:layout_alignBaseline="@+id/caretaker_tel"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_1"
                    android:id="@+id/caretakerAddrLine1Label"
                    android:layout_alignBaseline="@+id/caretaker_addr1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_2"
                    android:id="@+id/caretakerAddrLine2Label"
                    android:layout_alignBaseline="@+id/caretaker_addr2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_3"
                    android:id="@+id/caretakerAddrLine3Label"
                    android:layout_alignBaseline="@+id/caretaker_addr3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_name"
                    android:layout_alignLeft="@+id/caretaker_id"
                    android:layout_alignStart="@+id/caretaker_id"
                    android:layout_below="@+id/textView18"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_id"
                    android:layout_below="@id/caretaker_name"
                    android:layout_toRightOf="@+id/caretakerIdLabel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_tel"
                    android:layout_below="@+id/caretaker_id"
                    android:layout_toRightOf="@+id/caretakerIdLabel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="number"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_addr1"
                    android:layout_below="@+id/caretaker_tel"
                    android:layout_alignLeft="@+id/caretaker_tel"
                    android:layout_alignStart="@+id/caretaker_tel"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapWords" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_addr2"
                    android:layout_below="@+id/caretaker_addr1"
                    android:layout_alignLeft="@+id/caretaker_addr1"
                    android:layout_alignStart="@+id/caretaker_addr1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapWords" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/caretaker_addr3"
                    android:layout_below="@+id/caretaker_addr2"
                    android:layout_alignLeft="@+id/caretaker_addr2"
                    android:layout_alignStart="@+id/caretaker_addr2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi|actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapWords" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/savebutton4"
                    android:layout_below="@+id/caretaker_addr3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutEvent"
                android:layout_below="@+id/relativeLayoutCaretaker"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_heading"
                    android:id="@+id/textView15"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    style="@style/sectionHeader" />
                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD EVENT"
                    android:id="@+id/add_event_link"
                    android:layout_above="@+id/listView1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    style="@style/sectionHeaderRightButton"
                    android:visibility="invisible"/-->
                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView15"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </ListView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_events_here"
                    android:id="@+id/no_events_text"
                    android:layout_below="@+id/listView1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="invisible" />
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_event"
                    android:id="@+id/addEventButton"
                    android:layout_alignBaseline="@+id/textView15"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/savebutton"
                    android:layout_below="@+id/no_events_text"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
